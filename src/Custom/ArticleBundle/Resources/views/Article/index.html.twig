{% extends "::base.html.twig" %}

{% block content %}
    {% include "MainBundle:Default:admin_menu.html.twig" %}
    <h1>Article list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>{{ 'Title' | trans }}</th>
                <th>{{ 'Content' | trans }}</th>
                <th>{{ 'Actions' | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.title }}</td>
                <td>{{ entity.content }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('article_show', { 'id': entity.id }) }}">{{ 'show' | trans }}</a>
                        </li>
                        <li>
                            <a href="{{ path('article_edit', { 'id': entity.id }) }}">{{ 'edit' | trans }}</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
